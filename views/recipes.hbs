<div class="body">
				<div id="content">
					<div>
						<ul>
							{{#each recipes}}
							{{#if order}}
							 <li>
									<a href="/recipes/{{id}}"><img src="{{smallImagePath}}" alt="Image"></a>
									<div>
									<h3><a href="/recipes/{{id}}">{{title}}</a></h3>
									<div>
										<p>
										{{summary}}
										</p>
										<ul>
											{{#each ingredients}}
										<li>{{quantity}} {{title}}</li>
											{{/each}}
										</ul>
									</div>
									</div>
								</li>
							{{else}}
							<li>
								<a href="/recipes/{{id}}"><img src="{{smallImagePath}}" alt="Image"></a>
								<div>
									<h3><a href="/recipes/{{id}}">{{title}}</a></h3>
									<p>
										{{summary}}
									</p>
								</div>
							</li>
							<!--Kết quả hiện ra tìm kiếm li-->
							{{/if}}
							{{/each}}
							
						</ul>
					</div>
				</div>
			</div>